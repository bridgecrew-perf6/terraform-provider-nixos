{
    "mounts": {
        "rw": [
            ".", "~/.emacs.d",
	    ["./.cache",  "~/.cache", "d"],
	    ["./.config", "~/.config", "d"],
	    ["./.local",  "~/.local", "d"],
	    ["$SSH_AUTH_SOCK", "$SSH_AUTH_SOCK"],
            "/run/current-system"
        ],
        "ro": [
            "~/.ssh",
            "~/.gitconfig",
            "/"
        ],
        "dev": ["/dev"],
        "tmpfs": [
            "/run",
            "/tmp",
            "/home",
            "~"
        ]
    }
}
